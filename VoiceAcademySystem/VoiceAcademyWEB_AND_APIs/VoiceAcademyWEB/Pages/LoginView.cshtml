@page
@model VoiceAcademyWEB.Pages.LoginViewModel
@{
    ViewData["Title"] = "Inicio de Sesión";
}


<div class="container-fluid">
    <div class="row justify-content-center align-items-center vh-100">
        <div class="col-md-4">
            <h2 class="text-center">Iniciar Sesión</h2>
            <form method="post">
                
                <div class="mb-3">
                    <label asp-for="login.User" class="form-label">Correo Electrónico</label>
                    <input asp-for="login.User" class="form-control" />
                    <span asp-validation-for="login.User" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="login.Password" class="form-label">Contraseña</label>
                    <input asp-for="login.Password" type="password" class="form-control" />
                    <span asp-validation-for="login.Password" class="text-danger"></span>
                </div>
                <div class="text-center">
                    <button type="submit" class="btn btn-primary">Iniciar Sesión</button>
                </div>
                <div asp-validation-summary="All" class="text-danger"></div>
            </form>
        </div>
    </div>
</div>
<script src="https://stackpath.bootstrapcdn.com/bootstrap/5.0.0-alpha1/js/bootstrap.bundle.min.js"></script>


@section Scripts {
    <script src="https://kit.fontawesome.com/a076d05399.js"></script>
}
