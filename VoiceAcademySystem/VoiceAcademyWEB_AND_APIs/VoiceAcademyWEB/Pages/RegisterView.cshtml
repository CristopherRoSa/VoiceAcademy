@page
@model VoiceAcademyWEB.Pages.RegisterViewModel
@{
}


<div class="container mt-5">
    <div class="row justify-content-center align-items-center">
        <div class="col-sm-12 col-md-12 col-lg-4">
            <h1 class="mb-3">Nuevo usuario</h1>
            <form method="post">

                <div class="mb-3">
                    <label class="col-form-label" asp-for="user.Email">Email</label>
                    <input type="email" class="form-control" asp-for="user.Email" placeholder="Ej. example@gmail.com" />
                    <span asp-validation-for="user.Email" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label class="col-form-label" asp-for="user.Name">Nombre</label>
                    <input type="text" class="form-control" asp-for="user.Name" placeholder="Ej. Carlos" />
                    <span asp-validation-for="user.Name" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label class="col-form-label" asp-for="user.LastName">Apellido</label>
                    <input type="text" class="form-control" asp-for="user.LastName" placeholder="Ej. Reyes" />
                    <span asp-validation-for="user.LastName" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label class="col-form-label" asp-for="user.Age">Edad</label>
                    <input type="text" class="form-control" asp-for="user.Age" placeholder="Ej. 34" />
                    <span asp-validation-for="user.Age" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label class="col-form-label" asp-for="user.Password">Contraseña</label>
                    <input type="password" class="form-control" asp-for="user.Password" />
                    <span asp-validation-for="user.Password" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <button type="submit" class="btn btn-primary">Registrar</button>
                </div>
                <div asp-validation-summary="All" class="text-danger"></div>
            </form>
        </div>
    </div>
</div>